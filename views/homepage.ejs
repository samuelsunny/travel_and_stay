<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Search flights</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .paymentinfo
        {
            background-color: #5DA7DB;
        }
    </style>
  </head>
  <body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><h4>Travel & Stay</h4></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    

                    
                </ul>
                <span class="align-middle mr-2">
                    <h1 class="display-4 fs-5 text-center ">Welcome, <%= user.username %> &nbsp; </h1>
                </span>
                    <a href="logout">
                        <button class="btn btn-warning  ml-2" type="submit">Log out</button>
                    </a>
                </div>
            </div>
        </nav>
    </div> 

    <div class="container-fluid mt-1">
        <div class="row justify-content-center">
            <div class="col-7">
                <div class="row justify-content-center">
                    <div class="col-2">
                            <a class="text-decoration-none" href="searchflights">
                                <button class="btn btn-primary"><h4 class="m-0 p-1">Flights</h4></button>
                            </a>
                        </div>
                        <div class="col-2">
                            <a class="text-decoration-none" href="searchhotels">
                                <button class="btn btn btn-outline-success"><h4 class="m-0 p-1">Hotels</h4></button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
       
    <div class="container-fluid mt-2">

        <div class="row justify-content-center">
            
            <div class="col-12">
                <div class="card bg-light mx-auto">
                    <div class="card-body">
                        <form method = "post">
                        <div class="row">
                            
                            <div class="col-2 m-2 mt-0">
                                <div class="row text-left">
                                    <label for="user_name" class="form-label"><h4>From</h4></label>
                                    <input class="form-control me-2" type="search" placeholder="Departure city" aria-label="Departure city">
                                </div>
                            </div>
                            <div class="col-2 m-2 mt-0">
                                <div class="row text-left">
                                    <label for="user_name" class="form-label"><h4>To</h4></label>
                                    <input class="form-control me-2" type="search" placeholder="Destination city" aria-label="Destination city">
                                </div>
                            </div>
                            <div class="col-2 m-2 mt-0">
                                <div class="row text-left">
                                    <label for="user_name" class="form-label"><h4>Travel date</h4></label>
                                    <input class="form-control me-2" type="date" id="travel_date" name="travel_date" onchange="getTravelDate()" placeholder="Date of travel" aria-label="Date of travel">
                                </div>
                            </div>
                            <div class="col-2 m-2 mt-0">
                                <div class="row text-left">
                                    <label for="user_name" class="form-label"><h4>Round trip</h4></label>
                                    <input class="form-control me-2" type="date" id="return_date" name="return_date" onchange="getReturnDate()" placeholder="Date of travel" aria-label="Date of travel">
                                </div>
                            </div>
                            &nbsp;
                            <div class="col-1 m-2 mt-0">
                                <div class="row text-left">
                                    <label for="user_name" class="form-label"><h4>People</h4></label>
                                    <input class="form-control me-2" type="number" placeholder="" aria-label="number_of_travellers">
                                </div>
                            </div>
                            <div class="col-2 m-2 mt-0">
                                <div class="row text-left">
                                    <label for="exampleDataList" class="form-label"><h4>Preferred class</h4></label>
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>Choose class</option>
                                        <option value="1">Business</option>
                                        <option value="2">Premium economy</option>
                                        <option value="3">Economy</option>
                                      </select>
                                </div>
                            </div>
                        </div>   
                                                
                        <div class="row text-center">
                            <div id="sender">
                                <button type="submit" class="btn btn-primary mt-2 my-auto" id="button" ><h5>Search</h5></button>
                            </div>
                        </div>   
                            
                        </form>
                    </div>

                  </div>
            </div>
        </div>
    </div>
    <script>
        var return_date = "";
        var travel_date = "";
        function reset_date_native() {
            var date_input = document.getElementById('return_date');

            //erase the input value
            date_input.value = '';

            //prevent error on older browsers (aka IE8)
            if (date_input.type === 'date') {
                //update the input content (visually)
                date_input.type = 'text';
                date_input.type = 'date';
            }
        }
        function getReturnDate()
        {
            return_date_field = document.getElementById("return_date");
            return_date = document.getElementById("return_date").value;
            travel_date = document.getElementById("travel_date").value;
            if(travel_date>return_date)
            {
                alert("Please select a proper date of return");
                // Resetting the return date
                reset_date_native()
            }
        }
        function getTravelDate()
        {
            travel_date_field = document.getElementById("travel_date");
            travel_date = document.getElementById("travel_date").value;
            // travel_date_field.innerHTML = 'None';
            console.log("travel_date:",travel_date);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
  </body>
</html>